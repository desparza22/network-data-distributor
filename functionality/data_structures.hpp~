#ifndef DATA_STRUCTURES_HPP
#define DATA_STRUCTURES_HPP

#include <ares.h>
#include <stdlib.h>

#define ADDRESS_CODE 0

struct Address {
  char* IP;
  int ip_len;
  char* port;
  int port_len;
};

struct AddressList {
  struct Address** addresses;
  int num_addresses;

  int address_capacity;
};

void packet_from_AddressList(struct AddressList* addresses, void** buffer, int* set_to_buffer_len);

void AddressList_from_packet(char* packet, int packet_len, struct AddressList** set_to_addresses);

int calculate_packet_size(struct AddressList* addresses);

void fill_packet_from_AddressList(char* packet, struct AddressList* addresses);

void packet_insert_Address_at(char* packet, struct Address* address, int* fill_idx_ptr);



#endif
